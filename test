class Solution {
    public int search(int[] nums, int target) {
        int j = nums.length-1;
        int middle;
        for(int i=0;i<=j;){
            middle = (i+j)/2;
            if(nums[middle]==target){
                return middle;
            }
            if(nums[middle]>target){
                j=middle-1;
            }
            if(nums[middle]<target){
                i=middle+1;
            }
        }
        return -1;
    }
}
